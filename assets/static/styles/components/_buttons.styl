.btn
    display inline-block
    height (56em/18)
    padding 0 (66em/18)
    font (18em/16) baseFontBold
    line-height (52em/18)
    text-transform uppercase
    border 2px solid primaryBlackColor 
    opacity .7
    transition all .3s
    &_color_golden
        color primaryGoldenColor
        border-color primaryGoldenColor
    &:hover
        opacity 1
    
.navbar-toggle
    position relative
    z-index $z-index1
    display none
    width 30px
    @media (orientation portrait) and (max-width 1024px)
        display block
    span 
        display block
        height 2px
        background-color primaryBlackColor
        transition all .3s
        &:first-child
            transform rotate(-45deg)
        &:last-child
            transform rotate(45deg) translate(-1px, -1px)
    &.collapsed
        span 
            transform rotate(0) translate(0, 0)
            &:not(:last-child)
                margin-bottom 6px
    
            

